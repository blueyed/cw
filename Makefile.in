# this was NOT generated by automake.
prefix=@prefix@
BINDIR=${prefix}/bin
LIBDIR=${prefix}/lib
datarootdir = @datarootdir@
MANDIR=@mandir@
SHELL=@SHELL@
CC=@CC@
ECHO=echo
LN=ln
RM=rm
MKDIR_P=mkdir -p
INSTALL=@INSTALL@

all: cw

cw:
	$(CC) src/cw.c -o bin/cw @CFLAGS@ @LIBS@ @DEFS@

clean:
	$(RM) -rf Makefile config.status config.cache config.log config.h bin/cw$(EXEEXT)

install: cw
	for FILE in bin/*; do $(INSTALL) $$FILE $(BINDIR); done
	$(LN) -sf $(BINDIR)/cw$(EXEEXT) $(BINDIR)/cwe$(EXEEXT)
	$(MKDIR_P) $(LIBDIR)/cw/
	for FILE in def/*.in; do \
	  printf "#!$(BINDIR)/cw\n" > $${FILE%.in};\
	  echo $(INSTALL) $${FILE%.in} $(LIBDIR)/cw/;\
	done
	$(MKDIR_P) $(LIBDIR)/cw/etc
	for FILE in etc/*; do $(INSTALL) -m 644 $$FILE $(LIBDIR)/cw/etc; done
	for FILE in man/*; do $(INSTALL) -m 644 $$FILE $(MANDIR)/man1/; done

uninstall:
	$(RM) -rf $(BINDIR)/cw$(EXEEXT) $(BINDIR)/cwe$(EXEEXT) $(BINDIR)/colorcfg $(LIBDIR)/cw $(MANDIR)/man1/cw.1 $(MANDIR)/man1/cwe.1
